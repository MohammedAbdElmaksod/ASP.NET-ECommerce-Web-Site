                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Shop" class="nav-link">Shop</a></li>
                    <li class="nav-item"><a asp-controller="OrderController1" asp-action="Cart" class="nav-link">Cart</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="CheckOut" class="nav-link">CheckOut</a></li>
                    @if (manger.IsSignedIn(User))
                    {
                        <li class="nav-item"><a asp-controller="OrderController1" asp-action="Logout" class="nav-link">LogOut</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a asp-controller="OrderController1" asp-action="Login" class="nav-link">LogIn</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
